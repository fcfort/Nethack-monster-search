<div id="mon_div">
<h1>Nethack monster search</h1>

  <%= form_tag 'index', :method => :get, :remote => true do %>
    <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>

  <ul class="mon-list" id="mon-ajax">
    <%= render @monsters %>
  </ul>
</div>
